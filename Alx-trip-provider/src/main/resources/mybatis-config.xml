<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <!-- 系统配置 -->
    <settings>
		 <!-- 配置自动映射的级别 -->
        <setting name="autoMappingBehavior" value="FULL"/>
    </settings>
	
	 <!-- 为实体类起别名 -->
    <typeAliases>
        <typeAlias alias="HotelDetail" type="com.zb.entity.HotelDetail"/>

    </typeAliases>

    <mappers>
        <mapper resource="mapper/HotelDetailMapper.xml"/>
        <mapper resource="mapper/AllImageMapper.xml"/>
        <mapper resource="mapper/AreaMapper.xml"/>
        <mapper resource="mapper/RoomMapper.xml"/>
        <mapper resource="mapper/CommentMapper.xml"/>
        <mapper resource="mapper/LabelMapper.xml"/>
        <mapper resource="mapper/FeatureMapper.xml"/>
        <mapper resource="mapper/TemplateStoreMapper.xml"/>
        <mapper resource="mapper/OrderMapper.xml"/>
        <mapper resource="mapper/TaskMapper.xml"/>
        <mapper resource="mapper/TaskhisMapper.xml"/>
    </mappers>


</configuration>